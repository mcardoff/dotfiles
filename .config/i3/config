# polybar
# bar {
	# status_command (polybar main)   
# }

# i3status
bar {
        status_command (i3status -c ~/.config/i3/i3status.conf)
	
	strip_workspace_numbers yes
	separator_symbol "|"

	position bottom
	tray_padding 0

	colors {
	       background $bg-alt
	       statusline $white

	       focused_workspace  $focus  $focus  $white
	       active_workspace   $active $active $white
	       inactive_workspace $bg-alt $bg-alt $white-alt
	       urgent_workspace   $white  $alert
	}	
}

# Execute startup stuff
exec ($term -t "sp")
exec ($term -t "Ranger" -e "ranger")
exec (emacs --eval (server-start) -T "Scratchpad")
exec_always (~/.bin/ranger.sh)
exec_always (~/.bin/i3init.sh)
