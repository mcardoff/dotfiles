# i3 Status
bar {
        status_command (i3status -c ~/.config/i3/i3status.conf)
	
	strip_workspace_numbers yes
	separator_symbol " "

	position bottom
	tray_padding 0

	colors {
	       background #000000
	       statusline #ffffff

	       focused_workspace $secon  $secon  #ffffff
	       active_workspace  #ffffff $secon  #ffffff
	       inactive_workspace #222222 #222222 #888888
	       urgent_workspace   #ffffff #900000	
	}	
}

